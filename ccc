#!/usr/bin/env bash
set -e

echo "ğŸ” Checking for NVM..."

# Detect and load NVM (common install paths)
if [ -s "$HOME/.nvm/nvm.sh" ]; then
    export NVM_DIR="$HOME/.nvm"
    . "$NVM_DIR/nvm.sh"
elif [ -s "/usr/local/share/nvm/nvm.sh" ]; then
    export NVM_DIR="/usr/local/share/nvm"
    . "$NVM_DIR/nvm.sh"
else
    echo "ğŸ“¦ Installing NVM..."
    curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/master/install.sh | bash
    # Try both common paths after install
    export NVM_DIR="$HOME/.nvm"
    [ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh" || {
        export NVM_DIR="/usr/local/share/nvm"
        [ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"
    }
fi

if ! command -v nvm &> /dev/null; then
    echo "âŒ NVM not found even after installation. Please reopen your terminal and re-run this script."
    exit 1
fi

echo "â¬‡ï¸ Installing Node.js v24..."
nvm install 24
nvm use 24
nvm alias default 24

echo "â¬†ï¸ Upgrading npm..."
npm install -g npm

echo "âš™ï¸ Installing Claude Code CLI..."
npm install -g @anthropic-ai/claude-code

# Verify Claude installation
if ! command -v claude &> /dev/null; then
    echo "âŒ Failed to install Claude Code. Please try manually:"
    echo "   npm install -g @anthropic-ai/claude-code"
    echo "   # OR"
    echo "   claude doctor  # for diagnostics"
    exit 1
fi

echo "ğŸš€ Starting Claude Code..."
claude --dangerously-skip-permissions
